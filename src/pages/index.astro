---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/Hero.astro";
import ChargeSection from "../components/ModelYSection.astro";
import ModelYSection from "../components/ModelYSection.astro";
import Section from "../components/Section.astro";
import Hero from "../components/Hero.astro";
import Model3 from "../components/Model3.astro";
import ModelS from "../components/ModelS.astro";
import ModelX from "../components/ModelX.astro";
import Powerwall from "../components/Powerwall.astro";
import Accesories from "../components/Accessories.astro";
---

<Layout title="Tesla">
  <Header />
  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth"
  >
    <div class="snap-center">
      <Hero />
    </div>
    <div class="snap-center">
      <ModelYSection />
    </div>
    <div class="snap-center">
      <Model3 />
    </div>
    <div class="snap-center">
      <ModelS />
    </div>
    <div class="snap-center">
      <ModelX />
    </div>
    <div class="snap-center">
      <Powerwall />
    </div>
    <div class="snap-center">
      <Accesories />
    </div>
  </main>
</Layout>
